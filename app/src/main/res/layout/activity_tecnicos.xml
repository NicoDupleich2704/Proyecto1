<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondo_tecnico"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSemiTransluscentFondo">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/accentServicios"
            android:gravity="center"
            android:padding="@dimen/padding_titulo"
            android:text="@string/TextoTecnicos"
            android:textColor="@color/colorBlanco"
            android:textSize="@dimen/tamanio_letra_titulo"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="start"
            android:padding="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/herr"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/TextoProblema"
                    android:textColor="@color/colorNegro"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_margin="10dp"/>

                <EditText
                    android:id="@+id/problem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/Escribir_aqui"
                    android:inputType="text"
                    android:layout_marginBottom="20dp"
                    android:gravity="start"
                    android:background="@drawable/background_sintomas"
                    android:padding="10dp"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_queTecnico"
                    android:textColor="@color/colorNegro"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_margin="10dp"/>

                <EditText
                    android:id="@+id/tecnico_requerido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/Escribir_aqui"
                    android:inputType="text"
                    android:layout_marginBottom="20dp"
                    android:gravity="start"
                    android:background="@drawable/background_sintomas"
                    android:padding="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <Button
                    android:id="@+id/boton_para_enviar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/botonEnviar"
                    android:background="@drawable/boton_background"
                    android:textSize="20sp"
                    android:padding="15dp"
                    android:textColor="@color/colorBlanco"
                    android:textStyle="bold" />


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>
</FrameLayout>