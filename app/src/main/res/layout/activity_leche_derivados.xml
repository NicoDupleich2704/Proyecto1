<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_leche"
    tools:context=".LecheDerivadosActivity">

    <TextView
        android:id="@+id/txt_TituloLecheDerivados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D2A8D574"
        android:padding="10sp"
        android:text="@string/txt_TituloLeche"
        android:textAlignment="center"
        android:textColor="#0E0E0E"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="117dp" />

    <TextView
        android:id="@+id/txt_SubTituloLecheDerivados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:background="#E0AEA8A8"
        android:padding="10sp"
        android:text="@string/txt_SubTituloLeche"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_TituloLecheDerivados" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="409dp"
        android:layout_height="565dp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="156dp" />


</androidx.constraintlayout.widget.ConstraintLayout>